{%- assign item = section.settings -%}
<div class="container-indent nomargin">
  <div class="sp-page404" style="background: {{ item.bg_color }};">
    {% if item.image != blank %}
      <a class="logo" href="/"><img src="{{ item.image | img_url: '1024x' }}" alt="{{ item.image.alt }}"></a>
    {% endif %}

    <h1 class="sp-title heading">{{ item.heading }}</h1>

    <div class="title" style="color: {{ item.t1_color }};">{{ item.title }}</div>

    <p style="color: {{ item.t2_color }};">{{ item.text }}</p>
    <a href="/" class="btn-page" data-c="{{ item.cbtntext }}" data-ac="{{ item.acbtntext }}" data-bgc="{{ item.cbtnbg }}" data-abgc="{{ item.acbtnbg }}" data-hovercolors>Go Home</a>
    <form class="search" action="/search">
      <input class="search-button" type="submit" value="Search">
      <input class="search-input" type="text" placeholder="Search here..." name="q" value="{{ search.terms | escape }}"  />
    </form>
  </div>
</div>
<style type="text/css">
  a.
</style>
{% schema %}
  {
    "name": "404",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "header",
        "content": "Background"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#2879fe"
      },
      {
        "type": "header",
        "content": "Texts"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "heading 404",
        "default": "Error 404"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title 404",
        "default": "Oops, this page can't be found"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Text",
        "default": "The link might be corrupted or the page may have been removed for various reasons."
      },
      {
        "type": "color",
        "id": "t1_color",
        "label": "Text 1 Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "t2_color",
        "label": "Text 2 Color",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Button Colors"
      },
      {
        "type": "color",
        "id": "cbtnbg",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "cbtntext",
        "label": "Text Color",
        "default": "#191919"
      },
      {
        "type": "color",
        "id": "acbtnbg",
        "label": "Hover Background Color",
        "default": "#191919"
      },
      {
        "type": "color",
        "id": "acbtntext",
        "label": "Hover Text Color",
        "default": "#ffffff"
      }
    ]
  }
{% endschema %}
