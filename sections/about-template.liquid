{%- assign item = section.settings -%}
<section id="section-{{ section.id }}">
  <div class="container-indent page">
    <div class="img-about" style="background-image: url('{{ item.image | img_url: '1930x1200' }}');">
    </div>
  </div>
  <div class="page-content">
    <div class="container">
      <div class="row" style="flex-direction: {{ item.row_1_direction }}">
        <div class="col-lg-6 col-md-6 col-sm-12 text-column">
          <div class="column-about">
            {%- if item.title != blank -%}
            <h2 class="heading" style="color: {{ item.color_heading }}">{{ item.title }}</h2>
            {%- endif -%}
            {%- if item.description != blank -%}
            <div class="descriptions" style="color: {{ item.color_text_2 }}; font-size: 15px;">
              <span>
                {{ item.description }}
              </span>
            </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="bb-img-about hidden--mobile">
            <img src="{{ item.image_1 | img_url: '1200x' }}">
          </div>
        </div>
      </div>
      <div class="row" style="flex-direction: {{ item.row_2_direction }}">
        <div class="col-lg-6 col-md-6 col-sm-12 text-column">
          <div class="column-about">
            {%- if item.title_1 != blank -%}
            <h2 class="heading" style="color: {{ item.color_heading }}">{{ item.title_1 }}</h2>
            {%- endif -%}

            {%- if item.description_1 != blank -%}
            <div class="descriptions" style="color: {{ item.color_text }};">
              <span>
                {{ item.description_1 }}
              </span>
            </div>
            {%- endif -%}
            {%- if item.dev_logo != blank -%}
            <a href="" class="dev-logo">
              <img src=""></img>
            </a>
            {%- endif -%}

            {%- if item.show_social -%}
            <div class="social-footer">
              {%- include "footer_social" -%}
            </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12">
          <div class="bb-img-about hidden--mobile">
            <img src="{{ item.image_2 | img_url: '1200x' }}">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% stylesheet %}
#section-{{ section.id }} .text-column {
display: flex;
flex-direction: column;
justify-content: center;
}

#section-{{ section.id }} .cta-btn {
background-color: #c71932;
color: #fff;
padding: .5em 1em;
}
#section-{{ section.id }} .cta-btn:hover {
}

#section-{{ section.id }} .column-about {
margin-bottom: 0 !important;
}
#section-{{ section.id }} .row:not(:last-child){
margin-bottom: 1rem;
}
#section-{{ section.id }} .img-about{
background-attachment: fixed;
}
#section-{{ section.id }}{
padding:{{ section.settings.padding }};
margin:{{ section.settings.margin }};
}
@media (max-width: 1024px){
#section-{{ section.id }}{
padding:{{ section.settings.padding_mobi }};
margin:{{ section.settings.margin_mobi }};
}
}
#section-{{ section.id }} .page-content .bb-img-about img{
padding: 0 0 0 14px;
}
@media (min-width: 791px) and (max-width: 991px){
#section-about-template .page-content .col-md-6{
flex: 0 0 100%;
max-width: 100%;
}
}
{% endstylesheet %}
