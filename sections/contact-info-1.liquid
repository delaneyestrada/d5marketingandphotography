<section class="Section section-banner-info section--info-1" id="section-{{ section.id }}">
  <div class="container-index">
    <div class="container">
      <div class="row banner-info">
        {% for block in section.blocks %}
        <div class="col-sm-6 col-md-6 col-lg-3">
          <div class="content row">
            <div class="info col-sm-12 col-md-12">
              <div class="title" style="color: {{ section.settings.color_heading }};">{{ block.settings.title }}</div>
              <div class="text" style="color: {{ section.settings.color }};">{{ block.settings.text }}</div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

<style type="text/css">
  #section-{{ section.id }}{
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
    background-color: {{ section.settings.bg_color }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
        padding:{{ section.settings.padding_mobi }};
        margin:{{ section.settings.margin_mobi }};
    }
  }
  #section-{{ section.id }} .bg-img{
    margin-bottom: 27px;
  }
  #section-{{ section.id }} .bg-img img{
    width: 100%;
  }
</style>
{% schema %}
{
  "name": "Banner Info 1",
  "settings": [
    {
      "type": "text",
      "id": "padding",
      "label": "Section Padding",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "text",
      "id": "margin",
      "label": "Section margin",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "text",
      "id": "padding_mobi",
      "label": "Section Padding",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "text",
      "id": "margin_mobi",
      "label": "Section margin",
      "default": "0px 0px 0px 0px"
    },
    {
      "type": "color",
      "id": "color_heading",
      "label": "Color Heading",
      "default": "#303030"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color text",
      "default": "#303030"
    }
  ],
  "blocks": [
    {
      "type": "header",
      "name": "banner info",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "CORAL TOWER"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>70 Washington Square South</p>"
        }
      ]
    }
  ]
}
{% endschema %}