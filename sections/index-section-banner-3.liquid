{%- assign item = section.settings -%}

<section id="section-{{ section.id }}" data-aos="{{ section.settings.effect }}">
  <div class="container{% if item.fullwidth %}{% endif %}">
    {%- if item.show_title -%}
      <div class="sp-block-title">
        <h2 class="sp-title">{{ item.text1 }}</h2>
        {%- unless item.text2 == '' -%}<div class="sp-description">{{ item.text2 }}</div>{%- endunless -%}
      </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="row">
          {%- case section.blocks.size -%}
            {% when 1 %}
              {% for block in section.blocks %}
                {% assign b_i = block.settings %}
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                  {%- include 'banner-item' -%}
                </div>
              {% endfor %}
              

            {% when 2 %}
              <div style="padding: 0 15px; display: flex;">
                {% for block in section.blocks %}
                  {% assign b_i = block.settings %}
                    <div class="col-banner">
                      {%- include 'banner-item' -%}
                    </div>
                {% endfor %}
              </div>


            {% when 3 %}
              <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                <div class="row">
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                   {% assign b_i = section.blocks[0].settings %} 
                    {%- include 'banner-item' -%}
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                   {% assign b_i = section.blocks[1].settings %} 
                    {%- include 'banner-item' -%}
                  </div>
                </div>
              </div>
              <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                {% assign b_i = section.blocks[2].settings %} 
                {%- include 'banner-item' -%}
              </div>

            {% when 4 %}
            {% for block in section.blocks %}
            {% assign b_i = block.settings %}
              <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12">
                {%- include 'banner-item' -%}
              </div>
            {% endfor %}
            
          {%- endcase -%}
        </div>
      {%- else -%}
        <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}
  </div>
</section>
<style type="text/css">
  #section-{{ section.id }}{
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }

  @media (max-width: 1024px){
    #section-{{ section.id }}{
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
  }
  @media (max-width: 1599px){
    #section-{{ section.id }} .banner-content{
      padding: 29px 30px 30px 30px !important;
    }
  }
  @media (max-width: 575px){
    #section-{{ section.id }} .banner-content{
      padding: 15px !important;
    }
  }
</style>
