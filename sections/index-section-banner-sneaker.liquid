{%- assign item = section.settings -%}

<section id="section-{{ section.id }}" class="Section" data-aos="{{ section.settings.effect }}">
  <div class="container-fluid{% if item.fullwidth %}-fluid{% endif %}">
    {%- if item.show_title -%}
      <div class="sp-block-title">
        <h2 class="sp-title">{{ item.text1 }}</h2>
        {%- unless item.text2 == '' -%}<div class="sp-description">{{ item.text2 }}</div>{%- endunless -%}
      </div>
      {%- endif -%}

      <div class="row">
        <div class="col-lg-3 col-md-3 col-xs-12 col-sm-12" style="margin-bottom: 30px;">
          <div class="banner--content">
            {% if item.heading %}
              <div class="heading">
                {{ item.heading }}
              </div>
            {% endif %}

            {% if item.text %}
              <div class="sub_heading">
                <span>{{ item.text }}</span>
              </div>
            {% endif %}
          </div>
        </div>
        <div class="col-lg-9 col-md-9 col-xs-12 col-sm-12">
          <div class="row">
            {% for block in section.blocks %}
               {% assign b_i = block.settings %}
               <div class="col-md-4">
                 {%- include 'banner-item' -%}
               </div>
            {% endfor %}
          </div>
        </div> 
      </div>
  </div>
</section>
<style type="text/css">
  #section-{{ section.id }}{
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }

  @media (max-width: 1024px){
    #section-{{ section.id }}{
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
  }
</style>
