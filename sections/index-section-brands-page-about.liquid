{%- assign item = section.settings -%}
<section class="Section {{ section.id }}" id="section-{{ section.id }}" {%- if item.show_bg -%} style="background-image: url('{{ item.bg | img_url: '1900x'  }}');" {%- endif -%}>
  <div class="container-indent">
    <div class="container{%- if item.fullwidth -%}-fullwidth{%- endif -%}" data-sectionname="index_brands">
      {%- if section.blocks.size > 0 -%}
      <div class="sp-carousel-brands arrow-location-center-02 sp-arrow-hover" data-slick='{"slidesToShow": {{ item.toshow }}, "slidesToScroll": {{ item.step }}, "autoplay": {{ item.module_autoplay }}, "autoplaySpeed": {{ item.delay_time }}}'>
        {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
        <div {{ block.shopify_attributes }}>
          <a href="{{ b_i.link }}">
            {%- if b_i.image != blank -%}{% assign img_url = b_i.image | img_url: '1024x' %}
            {%- else -%}{% assign img_url = 'template_brand.png' | asset_url %}
            {%- endif -%}
            <img src="{{ img_url }}" alt="{{ b_i.image.alt }}">
          </a>
        </div>
        {%- endfor -%}
      </div>
      {%- else -%}
      <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}
    </div>
  </div>
</section>

<style type="text/css">
  #section-{{ section.id }}{
    background-repeat: repeat;
    background-size: cover;
    background-position:  center;
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
  }
  #section-{{ section.id }} .sp-carousel-brands{
    padding: {{ item.padding_content }};
  }
  {%- if item.show_border -%} 
    #section-{{ section.id }} .sp-carousel-brands{
      border: 1px solid {{ item.color_border }};
    }
  {%- endif -%}
  .{{ section.id }} .sp-carousel-brands a img{
    opacity: 0.5;
  }
  .{{ section.id }} .sp-carousel-brands a:hover img{
    opacity: 1;
  }
</style>
