{%- assign item = section.settings -%}

{%- assign grid = section.settings.items -%}
{%- capture info_image_size -%}
{%- case grid -%}
{%- when '6' -%}{% if item.fullwidth %}1024x400px{% else %}600x300px{% endif %}
{%- when '4' -%}{% if item.fullwidth %}800x800px{% else %}400x400px{% endif %}
{%- else -%}{% if item.fullwidth %}600x600px{% else %}300x300px{% endif %}
{%- endcase -%}
{%- endcapture -%}

{%- assign img_size = info_image_size | split: 'x' | first | append: 'x' -%}
<section class="Section" id="section-{{ section.id }}" data-aos="{{ section.settings.effect }}" >
  <div class="container-indent {{ item.custom_classes }}">
    <div class="container-fluid{% if item.fullwidth %}-full{% endif %}">
      {%- if item.show_title -%}
      <div class="sp-block-title">
        <h2 class="sp-title">{{ item.text1 }}</h2>
        {%- unless item.text2 == '' -%}<div class="sp-description">{{ item.text2 }}</div>{%- endunless -%}
      </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
      <div class="row{% if section.blocks.size == 6 %} flex-sm-row-reverse{% else if section.blocks.size == 5 %} sp-list-sm-shift{% endif %}{% if item.top_offset == 'none' or item.show_title %} sp-layout-promo-box{% endif %}">
        {%- case section.blocks.size -%}
        {%- when 6 -%}
        <div class="col-sm-12 col-md-6">
          <div class="row">
            {%- capture info_image_size -%}910x780px{%- endcapture -%}
            {%- capture img_size -%}{% if item.fullwidth %}x800{% else %}x400{% endif %}{%- endcapture -%}
            <div class="col-sm-6">
              {%- assign b_i = section.blocks[3].settings -%}{% include 'section-banner-item' %}
            </div>
            <div class="col-sm-6">
              {%- assign b_i = section.blocks[4].settings -%}{% include 'section-banner-item' %}
            </div>
            <div class="col-sm-12">
              {%- capture info_image_size -%}930x390px{%- endcapture -%}
              {%- capture img_size -%}{% if item.fullwidth %}1024x{% else %}600x{% endif %}{%- endcapture -%}
              {%- assign b_i = section.blocks[5].settings -%}{% include 'section-banner-item' %}
            </div>
          </div>
        </div>
        <div class="col-sm-12 col-md-6">
          <div class="row">
            <div class="col-sm-6">
              {%- capture info_image_size -%}910x780px{%- endcapture -%}
              {%- capture img_size -%}{% if item.fullwidth %}x800{% else %}x400{% endif %}{%- endcapture -%}
              {%- assign b_i = section.blocks[0].settings -%}{% include 'section-banner-item' %}
              {%- assign b_i = section.blocks[1].settings -%}{% include 'section-banner-item' %}
            </div>
            <div class="col-sm-6">
              {%- capture info_image_size -%}910x1600px{%- endcapture -%}
              {%- capture img_size -%}{% if item.fullwidth %}1024x{% else %}600x{% endif %}{%- endcapture -%}
