{%- assign item = section.settings -%}

<section id="section-{{ section.id }}" class="section-fancybox" data-aos="{{ section.settings.effect }}">
  <div class="container-fluid{% if item.fullwidth %}-fluid{% endif %}">
    {%- if item.show_title -%}
      <div class="sp-block-title">
        <h2 class="sp-title">{{ item.text1 }}</h2>
        {%- unless item.text2 == '' -%}<div class="sp-description">{{ item.text2 }}</div>{%- endunless -%}
      </div>
      {%- endif -%}

      {%- if section.blocks.size > 0 -%}
        <div class="fancybox-row">
        {%- for block in section.blocks -%}
        {%- assign b_s = block.settings -%}
          <div class="fancy-wrapper">
            <div class="fancy-img">
              {%- if b_s.image == blank -%}{%- include "get_svg" type:'image' size:info_image_size -%}
              {%- else -%}
              <img src="{{ b_s.image | img_url : '500x' }}">
              {%- endif -%}
            </div>
            <div class="fancy-content">
              <div class="fancy-decs" style="color: {{ b_s.color_decs }}">{{ b_s.decs }}</div>
              <h4 class="fancy-title" style="color: {{ b_s.color_title }}">{{ b_s.title }}</h4>
              <a href="{{ b_s.link }}" class="btn  btn-border">{{ b_s.text }}</a>
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
      {%- endif -%}
  </div>
</section>
<style type="text/css">
  #section-{{ section.id }}{
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }

  @media (max-width: 1024px){
    #section-{{ section.id }}{
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
  }
</style>
