{%- assign item = section.settings -%}
<section id="section-{{ section.id }}" data-aos="{{ section.settings.effect }}">
<div class="container-indent"{% if item.use_background and item.background_boxed == false %} style="background:{{ item.background_color }}"{% endif %}>
  <div class="container-fluid{% if item.fullwidth %}-fluid{% endif %}">
    <div class="sp-services-content" {% if item.use_background and item.background_boxed %} style="background:{{ item.background_color }}"{% endif %}>
      <div class="row {% if item.use_background %} sp-layout-02{% endif %}">
        
        {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
        <div class="col-xs-12 col-md-icon col-xl-{{ item.items }}" {{ block.shopify_attributes }}>
          <a href="{{ b_i.link }}" class="sp-services-block" data-hovercolors>
            {%- if b_i.show_icon != 'none' -%}
            <div class="sp-col-icon">
              {%- if b_i.show_icon == 'image' -%}
              <img src="{{ b_i.image | img_url: '60x' }}" alt="{{ b_i.image.alt }}">
              {%- else -%}
              <i class="{{ b_i.icon }}" style="color: {% if item.same_iconcolor %}{{ item.icon_color }}{% else %}{{ b_i.icon_color }}{% endif %}"></i>
              {%- endif -%}
            </div>
            {%- endif -%}
            <div class="sp-col-description">
              <h4 class="sp-title" style="color:{{ item.title_color }};" data-c="{{ item.title_color }}" data-ac="{{ item.title_hover_color }}">{{ b_i.text1 }}</h4>
              {% unless b_i.text2 == '' %}<p style="color: {{ item.desc_color }}">{{ b_i.text2 }}</p>{% endunless %}
            </div>
          </a>
        </div>
        {%- endfor -%}
        {%- else -%}
        <span style="display: flex; justify-content: center;">This section doesnâ€™t currently include any content. Add content to this section using the sidebar.</span>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>
</section>
<style type="text/css">
  #section-{{ section.id }}{
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }
  .sp-services-content{
    border: 1px solid {{ section.settings.border_color }};
  }
  .sp-services-content .row > div{
    border-right: 1px solid {{ section.settings.border_color }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
  }
</style>
