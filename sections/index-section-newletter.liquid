{% assign item = section.settings %}
<section class="Section section-newletter" id="section-{{ section.id }}" data-aos="{{ section.settings.effect }}">
  <div class="container-indent">
    <div class="container">
      <div class="newletter-content">
        <div class="sp-block-title bb-block text-center">
          <h2 class="sp-title {{ section.settings.style_title }}">{{ item.heading }}</h2>
          {%- unless item.description == '' -%}<div class="sp-description">{{ item.description }}</div>{%- endunless -%}
        </div>
        <div class="subscribe-form form-default">
          <div class="row-subscibe">
            {%- form 'customer' -%}
            {{ form.errors | default_errors }}
            {%- if form.posted_successfully? -%}
            {%- endif -%}
            <div class="bb-input-group">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email"
               name="contact[email]"
               class="bb-form-control"
               value="{%- if customer -%}{{ customer.email }}{%- endif -%}"
               placeholder="{{ item.placeholder }}"
               autocorrect="off"
               autocapitalize="off">
              <button type="submit" class="btn bb-btn" name="commit">{{ item.submit }}</button>
            </div>
            {%- endform -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style type="text/css">
  #section-{{ section.id }}{
    background-color: {{ section.settings.bg_color }};
    border-top: 1px solid {{ section.settings.border_color }};
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
      background-color: {{ section.settings.bg_color_mobi }};
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
</style>
