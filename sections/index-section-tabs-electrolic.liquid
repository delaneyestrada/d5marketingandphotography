{%- assign item = section.settings -%}
<section class="Section section-tabs-electrolic section-electrolic" id="section-{{ section.id }}" data-aos="{{ section.settings.effect }}">
  <div class="container-indent" data-sectionname="index_horizontaltabs">
    <div class="container-fluid{% if item.fullwidth %}-full{% endif %} container-fluid-custom-mobile-padding">

      {% if item.show_title %}<div class="sp-block-title bb-title-tabs">
        <h2 class="sp-title">{{ item.text1 }}</h2>
      </div>{% endif %}
      {% if item.show_title %}<div class="sp-tab-wrapper">{% endif %}

        <ul class="nav nav-tabs sp-tabs-default" role="tablist">
          {%- for block in section.blocks -%}
          <li class="nav-item">
            <a href="#{{ section.id }}{{ forloop.index }}" class="nav-link{% if forloop.first %} active{% endif %}" data-toggle="tab" role="tab">
            {{ block.settings.tab_name }}</a>
          </li>
          {%- endfor -%}
        </ul>

        <div class="tab-content">
          {%- for block in section.blocks -%}
          {%- assign name_collection = block.settings.collection -%}
          
          {%- assign collection = collections[name_collection] -%}
          <div id="{{ section.id }}{{ forloop.index }}" class="tab-pane{% if forloop.first %} active{% endif %}" role="tabpanel" {{ block.shopify_attributes }}>
            {%- if block.type == 'item2' -%}
              <div class="row sp-layout-product-item">
                {%- for product in collection.products limit:block.settings.limit -%}
                <div class="col-6 col-md-4 col-lg-{{ block.settings.toshow }}">
                  {% include "product-grid-item" %}
                </div>
                {%- endfor -%}
              </div>
            
            {%- else -%}
              {% if section.settings.layout_type == 'slide' %}
                {%- assign slider_mode = true -%}
                <div class="sp-carousel-products-js row arrow-location-tab{% unless item.show_title %} no-title{% endunless %} sp-alignment-img sp-layout-product-item slick-animated-show-js" data-slick='{"slidesToShow": {{ block.settings.toshow }}, "slidesToScroll": {{ block.settings.step }}, "autoplay": {{ block.settings.module_autoplay }}, "autoplaySpeed": {{ block.settings.delay_time }}}' {{ block.shopify_attributes }}>
                  {%- for product in collection.products limit:block.settings.limit -%}
                  <div class="col-12">
                    {% include "product-grid-item" %}
                  </div>
                  {%- endfor -%}
                  {%- if name_collection == blank or collection.products.size == 0 -%}
                    {% for i in (1..block.settings.limit) %}
                      <div class="columns">
                        <div class="sp-product product-parent options-js thumbprod-center">
                          <div class="sp-image-box">
                            <a href="">
                              <span class="sp-img">
                                <img src="{{ 'bg.jpg' | asset_img_url: '600x710', crop: 'center' }}" class="lazyload">
                              </span>
                            </a>
                            <div class="gruop-button">
                              <a href="#" data-toggle="modal" class="sp-btn-quickview" data-tooltip="Quick View"> </a>
                              <div class="sp-row-btn btn-cart">
                                <form method="post" enctype="multipart/form-data">
                                  <button class="sp-btn-addtocart  addtocart-item-js thumbprod-button-bg" data-tooltip="Add to cart"><span class="icon icon-shopping_basket"></span> <span>ADD TO CART</span></button>
                                </form>
                              </div>
                              <a class="btn-cart btn-view-more" data-tooltip="View More">View more</a>
                              <a class="compare wk-app-btn sp-btn-compare" data-toggle="tooltip" data-tooltip="Compare" data-placement="left" href="#"><i class="fa fa-sliders" aria-hidden="true"></i></a>
                            </div>
                          </div>
                          <div class="sp-description">
                            <div class="sp-row">
                              <div class="sp-rating">
                                <span class="shopify-product-reviews-badge"></span>
                              </div>
                            </div>
                            <h5 class="sp-title prod-thumb-title-color"><a>Basic Swear Shirt</a></h5>
                            <div class="sp-price">
                              <span><span class="money">$660.00 </span></span><span class="old-price hide"></span>
                            </div>
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                  {%- endif -%}
                </div>
              {% else %}
                <div class="row">
                  {%- for product in collection.products limit:block.settings.limit -%}
                  <div class="columns columns-md-3 columns-sm-2 columns-xs-1 columns-{{ item.grid_row }}">
                    {% include "product-grid-item" %}
                  </div>
                  {%- endfor -%}
                  {%- if name_collection == blank or collection.products.size == 0 -%}
                    {% for i in (1..block.settings.limit) %}
                      <div class="columns columns-md-3 columns-sm-2 columns-xs-1 columns-{{ item.grid_row }}">
                        <div class="sp-product product-parent options-js thumbprod-center">
                          <div class="sp-image-box">
                            <a href="">
                              <span class="sp-img">
                                <img src="{{ 'bg.jpg' | asset_img_url: '600x710', crop: 'center' }}" class="lazyload">
                              </span>
                            </a>
                            <div class="gruop-button">
                              <a href="#" data-toggle="modal" class="sp-btn-quickview" data-tooltip="Quick View"> </a>
                              <div class="sp-row-btn btn-cart">
                                <form method="post" enctype="multipart/form-data">
                                  <button class="sp-btn-addtocart  addtocart-item-js thumbprod-button-bg" data-tooltip="Add to cart"><span class="icon icon-shopping_basket"></span> <span>ADD TO CART</span></button>
                                </form>
                              </div>
                              <a class="btn-cart btn-view-more" data-tooltip="View More">View more</a>
                              <a class="compare wk-app-btn sp-btn-compare" data-toggle="tooltip" data-tooltip="Compare" data-placement="left" href="#"><i class="fa fa-sliders" aria-hidden="true"></i></a>
                            </div>
                          </div>
                          <div class="sp-description">
                            <div class="sp-row">
                              <div class="sp-rating">
                                <span class="shopify-product-reviews-badge"></span>
                              </div>
                            </div>
                            <h5 class="sp-title prod-thumb-title-color"><a>Basic Swear Shirt</a></h5>
                            <div class="sp-price">
                              <span><span class="money">$660.00 </span></span><span class="old-price hide"></span>
                            </div>
                          </div>
                        </div>
                      </div>
                    {% endfor %}
                {%- endif -%}
                </div>
              {% endif %}
            {%- endif -%}
          </div>
          {%- endfor -%}
        </div>

      {%- if item.show_title -%}</div>{%- endif -%}
      {%- if item.btn_more -%}
        <div class="text-center margin-top">
          <a class="btn btn-more" href="{{ item.url_link }}"> {{ item.btn_text }}</a>
        </div>
      {%- endif -%}
    </div>
  </div>
</section>

<style type="text/css">
  #section-{{ section.id }}{
    background-color: {{ section.settings.bg_color }};
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
      background-color: {{ section.settings.bg_color_mobi }};
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};
    }
  }
  #section-{{ section.id }} .sp-tabs-default{
    border-bottom: 1px solid {{ section.settings.border_color }};
  }
</style>
