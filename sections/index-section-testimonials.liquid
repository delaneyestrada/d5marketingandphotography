<div class="container-indent testimonials{{ section.id }}" id="section-{{ section.id }}" data-aos="{{ section.settings.effect }}">
  <div class="container{% if section.settings.usebgcolor %} testimonials-bg-pad{% if section.settings.mobpad %} testimonials-mob-pad{% endif %}{% endif %}" data-sectionname="index_testimonials">
    {% if section.settings.text1 != blank %}
    <div class="sp-block-title">
      <h2 class="sp-title" style="color: {{ section.settings.titleco }};">{{ section.settings.text1 }}</h2>
    </div>
    {% endif %}

    {%- if section.blocks.size > 0 -%}
    <div class="sp-slider-fullwidth arrow-location-center-02 slick-animated-show-js" data-slick='{"slidesToShow": 1, "slidesToScroll": 1, "autoplay": {{ item.module_autoplay }}, "autoplaySpeed": {{ item.delay_time }}}'>
      {%- for block in section.blocks -%}{%- assign b_i = block.settings -%}
      <div class="item" {{ block.shopify_attributes }}>
        <a href="blog-single-post.html" class="sp-content-info">
          <div class="image"><span class="quote-icon flaticon-right-quote-sign" style="color: {{ section.settings.quote_icon }};"></span>
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url :'100x100' }}">
            {% else %}
              <img src="{{ 'bg.jpg' | asset_img_url: '100x100' }}">
            {% endif %}
          </div>
          {% unless b_i.text2 == '' %}<p style="color: {{ section.settings.descco }};">{{ b_i.text2 }}</p>{% endunless %}
          {% if b_i.text3 != '' or b_i.text4 != '' %}
          <div class="sp-subscription">
            {% unless b_i.text3 == '' %}<div class="sp-text-lage" style="color: {{ section.settings.authco }};">{{ b_i.text3 }}</div>{% endunless %}
            {% unless b_i.text4 == '' %}<div class="sp-text-small" style="color: {{ section.settings.hobbyco }};">{{ b_i.text4 }}</div>{% endunless %}
          </div>
          {%- endif -%}
        </a>
      </div>
      {%- endfor -%}
    </div>
    {%- else -%}
    <span style="display: flex; justify-content: center;">This section doesn’t currently include any content. Add content to this section using the sidebar.</span>
    {%- endif -%}
  </div>
  {% if section.settings.changebntcolor %}
  <style>
    .testimonials{{ section.id }} button{
      background: {{ section.settings.bgbaseco }} !important;
      color: {{ section.settings.arrbaseco }} !important;
    }
    .testimonials{{ section.id }} button:hover{
      background: {{ section.settings.bgactiveco }} !important;
      color: {{ section.settings.arractiveco }} !important;
    }
    .arrow-location-center-02 .slick-arrow, .arrow-location-center-02 .slick-arrow:active {
      top: {{ section.settings.btnsposition }}% !important;
    }
  </style>
  {% endif %}
</div>

<style type="text/css">
  {% if section.settings.bg_image %}
    #section-{{ section.id }}{
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-position: center;
      background-size: cover;
      background-image: url('{{ section.settings.bg_image | img_url: '1900x' }}');
    }
  {% endif %}
  {% if section.settings.show_overlay %}
    #section-{{ section.id }}:before{
      content: "";
      background-color: rgba(0,0,0,0.73);
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
    }
  {% endif %}
  #section-{{ section.id }}{
    position: relative;
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.color }};
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
      background-color: {{ section.settings.bg_color_mobi }};
      color: {{ section.settings.color_mobi }};
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};

    }
</style>
