{% assign item = section.settings %}
<section class="Section section-newletter" id="section-{{ section.id }}" >
  <div class="container-indent">
    <div class="container">
      <div class="newletter-content">
        <div class="sp-block-title bb-block text-center">
          <h2 class="sp-title {{ item.style_heading }}">{{ item.heading }}</h2>
          {%- unless item.description == '' -%}<div class="sp-description">{{ item.description }}</div>{%- endunless -%}
        </div>
        <div class="subscribe-form form-default">
          <div class="row-subscibe">
            {%- form 'customer' -%}
            {{ form.errors | default_errors }}
            {%- if form.posted_successfully? -%}
            {%- endif -%}
            <div class="bb-input-group">
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input type="email"
               name="contact[email]"
               class="bb-form-control"
               value="{%- if customer -%}{{ customer.email }}{%- endif -%}"
               placeholder="{{ item.placeholder }}"
               autocorrect="off"
               autocapitalize="off">
              <button type="submit" class="btn bb-btn" name="commit">{{ item.submit }}</button>
            </div>
            {%- endform -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style type="text/css">
  #section-{{ section.id }}{
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.color }};
    border-top: 1px solid {{ section.settings.border_color }};
    padding:{{ section.settings.padding }};
    margin:{{ section.settings.margin }};
  }
  @media (max-width: 1024px){
    #section-{{ section.id }}{
      background-color: {{ section.settings.bg_color_mobi }};
      color: {{ section.settings.color_mobi }};
      padding:{{ section.settings.padding_mobi }};
      margin:{{ section.settings.margin_mobi }};

    }
</style>
{% schema %}
{
  "name": "Newletter page",
  "class": "index-section",
  "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "border_color",
        "label": "Border Color",
        "default": "#dedede"
      },
      {
        "type": "text",
        "id": "padding",
        "label": "Section Padding",
        "default": "0px 0px 0px 0px"
      },
      {
        "type": "text",
        "id": "margin",
        "label": "Section margin",
        "default": "0px 0px 0px 0px"
      },
      {
          "type": "header",
          "content": "Mobile"
      },
      {
          "type": "color",
          "id": "bg_color_mobi",
          "label": "Background Color",
          "default": "#ffffff"
      },
      {
          "type": "color",
          "id": "color_mobi",
          "label": "Color",
          "default": "#ffffff"
      },
      {
          "type": "text",
          "id": "padding_mobi",
          "label": "Section Padding",
          "default": "0px 0px 0px 0px"
      },
      {
          "type": "text",
          "id": "margin_mobi",
          "label": "Section margin",
          "default": "0px 0px 0px 0px"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "New Letter"
      },
      {
        "type": "select",
        "id": "style_heading",
        "label":"Style Heading",
        "default": "style_1",
        "options": [
            {
              "value": "style_1",
              "label": "style 1"
            },
            {
              "value": "style_2",
              "label": "style 2"
            }
        ]
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "description"
      },
      {
        "type": "text",
        "id": "submit",
        "label": "Subscribe",
        "default": "Subscribe"
      },
      {
        "type": "text",
        "id": "placeholder",
        "label": "Placeholder",
        "default": "Enter Your Email"
      }
  ]
}
{% endschema %}

