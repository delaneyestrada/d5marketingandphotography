<div class="sp-pagination{{ align }}">
  <ul>
    {% if paginate.previous.is_link %}
        <a href="{{ paginate.previous.url }}" class="previous"></a>
    {% endif %}
    {%- for part in paginate.parts -%}
    {%- if part.title != paginate.current_page -%}
    {%- if part.is_link -%}<li>{{ part.title | link_to: part.url}}</li>
    {%- else -%}<li><span>{{ part.title }}</span></li>
    {%- endif -%}
    {%- else -%}<li class="active"><a href="#">{{ part.title }}</a></li>
    {%- endif -%}
    {%- endfor -%}
    {% if paginate.next.is_link %}
      <a href="{{ paginate.next.url }}" class="next"></a>
    {% endif %} 
  </ul>
  <!-- {%- if paginate.next.is_link and paginate.pages > 3 -%}
  <a class="btn-pagination btn-next" href="{{ paginate.next.url }}"></a>
  {%- endif -%} -->
</div>